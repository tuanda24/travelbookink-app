<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#7DD8E4"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="637dp"
            android:layout_height="546dp"
            android:src="@drawable/imgstart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LET ENJOY THE"
            android:textColor="#000"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEAUTIFUL WORLD"
            android:textColor="#000"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorer new places in the world"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and get more experience"
            android:textColor="#000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/getStarted"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="GET STARTED"
            android:textSize="35dp" />


    </LinearLayout>
</RelativeLayout>